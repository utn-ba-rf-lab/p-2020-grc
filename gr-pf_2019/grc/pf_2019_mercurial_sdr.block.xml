<?xml version="1.0"?>
<block>
  <name>mercurial_sdr</name>
  <key>mercurial_sdr</key>
  <category>[mercurial_sdr]</category>
  <import>import mercurial_sdr</import>
  <make>mercurial_sdr.mercurial_sdr($modulation_key, $psk_key, $fc_key, $fs_key, $pammethod_key, $pamtype_key, $duty_key,$nbits_key,$am_fc_8bits_key,$am_fc_7bits_key,$am_fc_6bits_key,$am_fc_5bits_key,$psk_fc_key,$psk_fs5M_key,$psk_fs1M_key)</make>
<callback>set_modulation($bits_key)</callback>
 <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->


       
 <!--///Modulation options///-->
    <param>
        <name>Modulation</name>
        <key>modulation_key</key>
        <value>am</value>
        <type>string</type>

        <option>
            <name>AM</name>
            <key>am</key>
        </option>

        <option>
            <name>OOK</name>
            <key>ook</key>
        </option>

        <option>
            <name>PSK</name>
            <key>psk</key>
        </option>


        <option>
            <name>PAM</name>
            <key>pam</key>
        </option>
    </param>
    

 <!--///PSK modulations options///-->
    <param>
        <name>Type</name>
        <key>psk_key</key>
        <value>bpsk</value>
        <type>string</type>
        <hide>#if $modulation_key() == "psk" then 'none' else 'all'#</hide>

        <option>
            <name>BPSK</name>
            <key>bpsk</key>
        </option>
    
        <option>
            <name>QPSK</name>
            <key>qpsk</key>
        </option>

        <option>
            <name>8PSK</name>
            <key>8psk</key>
        </option>
    </param>

 <!--///PSK carrier frequency options///-->
    <param>
        <name>Carrier frequency </name>
        <key>psk_fc_key</key>
        <value>5000000</value>
        <type>int</type>
        <hide>#if $modulation_key() == "psk" then 'none' else 'all'#</hide>

        <option>
            <name>5 MHz</name>
            <key>5000000</key>
        </option>

        <option>
            <name>1 MHz</name>
            <key>1000000</key>
        </option>
    </param>


 <!--///PSK sampling frequency options for 5MHz///-->
    <param>
        <name>Sampling frequency</name>
        <key>psk_fs5M_key</key>
        <value>50000</value>
        <type>int</type>
        <hide>#if $modulation_key() == "psk" and $psk_fc_key() == 5000000 then 'none' else 'all'#</hide>

        <option>
            <name>250 kHz</name>
            <key>250000</key>
        </option>

        <option>
            <name>62.5 kHz</name>
            <key>62500</key>
        </option>

        <option>
            <name>50 kHz</name>
            <key>50000</key>
        </option>

        <option>
            <name>25 kHz</name>
            <key>25000</key>
        </option>
    </param>



 <!--///PSK carrier frequency options for 1MHz///-->
    <param>
        <name>Sampling frequency</name>
        <key>psk_fs1M_key</key>
        <value>50000</value>
        <type>int</type>
        <hide>#if $modulation_key() == "psk" and $psk_fc_key() == 1000000 then 'none' else 'all'#</hide>

        <option>
            <name>100 kHz</name>
            <key>100000</key>
        </option>

        <option>
            <name>50 kHz</name>
            <key>50000</key>
        </option>

        <option>
            <name>25 kHz</name>
            <key>25000</key>
        </option>
    </param>

 <!--///AM N-Bits options///-->
    <param>
        <name>N Bits</name>
        <key>nbits_key</key>
        <value>8</value>
        <type>int</type>
        <hide>#if $modulation_key() == "am" then 'none' else 'all'#</hide>

        <option>
            <name>8</name>
            <key>8</key>
        </option>
    
        <option>
            <name>7</name>
            <key>7</key>
        </option>

        <option>
            <name>6</name>
            <key>6</key>
        </option>

        <option>
            <name>5</name>
            <key>5</key>
        </option>
    </param>


 <!--///AM carrier frequency options for 8bits///-->
        <param>
        <name>Carrier Frequency</name>
        <key>am_fc_8bits_key</key>
        <value>pll_120</value>
        <type>string</type>
        <hide>#if $modulation_key() == "am" and $nbits_key() == 8 then 'none' else 'all'#</hide>

        <option>
            <name>196.3 kHz</name>
            <key>pll_50.25</key>
        </option>
    
        <option>
            <name>392.6 kHz</name>
            <key>pll_100.5</key>
        </option>

        <option>
            <name>785.2 kHz</name>
            <key>pll_201</key>
        </option>
    </param>


 <!--///AM carrier frequency options for 7bits///-->
        <param>
        <name>Carrier Frequency</name>
        <key>am_fc_7bits_key</key>
        <value>pll_120</value>
        <type>string</type>
        <hide>#if $modulation_key() == "am" and $nbits_key() == 7 then 'none' else 'all'#</hide>

        <option>
            <name>392.6 kHz</name>
            <key>pll_50.25</key>
        </option>

        <option>
            <name>785.2 kHz</name>
            <key>pll_100.5</key>
        </option>

        <option>
            <name>1.570 MHz</name>
            <key>pll_201</key>
        </option>
    </param>


 <!--///AM carrier frequency options for 6bits///-->
        <param>
        <name>Carrier Frequency</name>
        <key>am_fc_6bits_key</key>
        <value>pll_120</value>
        <type>string</type>
        <hide>#if $modulation_key() == "am" and $nbits_key() == 6 then 'none' else 'all'#</hide>

        <option>
            <name>785.2 kHz</name>
            <key>pll_50.25</key>
        </option>

        <option>
            <name>1.570 MHz</name>
            <key>pll_100.5</key>
        </option>

        <option>
            <name>3.141 MHz</name>
            <key>pll_201</key>
        </option>
    </param>


 <!--///AM carrier frequency options for 5bits///-->
        <param>
        <name>Carrier Frequency</name>
        <key>am_fc_5bits_key</key>
        <value>pll_50</value>
        <type>string</type>
        <hide>#if $modulation_key() == "am" and $nbits_key() == 5 then 'none' else 'all'#</hide>

        <option>
            <name>1.570 MHz</name>
            <key>pll_50.25</key>
        </option>

        <option>
            <name>3.141 MHz</name>
            <key>pll_100.5</key>
        </option>
    </param>



 <!--///OOK carrier frequency///-->
    <param>
        <name>Carrier Frequency</name>
        <key>fc_key</key>
        <value>1000000</value>
        <type>int</type>
        <hide>#if $modulation_key() == "ook"  then 'none' else 'all'#</hide>
    </param>



 <!--///OOK symbol time///-->
    <param>
        <name>Symbol Time</name>
        <key>symtime_key</key>
        <value>500000</value>
        <type>int</type>
        <hide>#if $modulation_key() == "ook" then 'none' else 'all'#</hide>
    </param>


 <!--///OOK sampling frequency///-->
    <param>
        <name>Sampling Frequency</name>
        <key>fs_key</key>
        <value>44100</value>
        <type>float</type>
        <hide>#if $modulation_key() == "am" then 'none' else 'all'#</hide>
    </param>



 <!--///PAM types///-->
    <param>
        <name>Type PAM</name>
        <key>pammethod_key</key>
        <value>natural_key</value>
        <type>string</type>
        <hide>#if $modulation_key() == "pam" then 'none' else 'all'#</hide>

        <option>
            <name>Flat Top</name>
            <key>flat_key</key>
        </option>

        <option>
            <name>Natural</name>
            <key>natural_key</key>
        </option>
    </param>
    
    

 <!--///PAM methods///-->
    <param>
        <name>Method PAM</name>
        <key>pamtype_key</key>
        <value>linear_key</value>
        <type>string</type>
        <hide>#if $modulation_key() == "pam" then 'none' else 'all'#</hide>

        <option>
            <name>Linear</name>
            <key>linear_key</key>
        </option>

        <option>
            <name>Î¼-Law</name>
            <key>ulaw</key>
        </option>

        <option>
            <name>A-Law</name>
            <key>alaw</key>
        </option>
    </param>



 <!--///PAM sampling frequency///-->
    <param>
        <name>Sampling Frequency</name>
        <key>fs_pam_key</key>
        <value>96000</value>
        <type>int</type>
        <hide>#if $modulation_key() == "pam" then 'none' else 'all'#</hide>

        <option>
            <name>96 kHz</name>
            <key>96000</key>
        </option>
    </param>
    


 <!--///PAM duty cycle///-->
    <param>
        <name>Duty Cycle(%)</name>
        <key>duty_key</key>
        <value>50</value>
        <type>int</type>
        <hide>#if $modulation_key() == "pam" then 'none' else 'all'#</hide>
    </param>
    

<!-- Checks -->
    <!--/<check>$fs_pam_key == 100000</check> ///-->
    <check>$duty_key &gt;= 0</check>                    <!--/Mayor o igual/-->
    <check>$duty_key &lt;= 100</check>                  <!--/Menor o igual/-->


<!-- Sinks and sources -->
    <sink>
        <name>in_0</name>
        <type>float</type>
    </sink>

    <sink>
        <name>in_1</name>
        <type>float</type>
    </sink>

    <source>
        <name>out</name>
        <type>float</type>
    </source>

</block>
